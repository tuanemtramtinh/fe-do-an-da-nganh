extends ./layouts/default.pug

block head 
  title Tính toán

block main
  .calculate-section-1
    .container
      .calculate-section-1__wrapper
        .calculate-section-1__title
          <i class="fa-solid fa-calculator"></i>
          h2 Quy Trình Tính Toán
          p Kết quả tính toán và linh kiện sẽ được thể hiện ở từng bước 

  .calculate-input 
    .container 
      .calculate-input__wrapper 
        .section-3__title
          h2 Thông số nhập vào
        .section-3__form
          form.section-3__form-wrapper
            div 
              label.form-label(for="F") Lực trên vòng xích tải F(N)
              input(type="text" id="F" name="F" disabled)
            div 
              label.form-label(for="p") Bước xích tải, p(mm)
              input(type="text" id="p" name="p" disabled)
            div 
              label.form-label(for="v") Vận tốc xích tải, v (m/s)
              input(type="text" id="v" name="v" disabled)
            div 
              label.form-label(for="L") Thời gian phục vụ, L(năm)
              input(type="text" id="L" name="L" disabled)
            div 
              label.form-label(for="z") Số răng đĩa xích tải dẫn, z (răng)
              input(type="text" id="z" name="z" disabled)
            div 
              label.form-label(for="T1") Moment xoắn ban đầu, T1
              input(type="text" id="T1" name="T1" disabled)
            div 
              label.form-label(for="T2") Moment xoắn sau đó, T2
              input(type="text" id="T2" name="T2" disabled)
            div 
              label.form-label(for="t1") Thời gian xoắn lúc đầu, t1
              input(type="text" id="t1" name="t1" disabled)
            div 
              label.form-label(for="t2") Thời gian xoắn lúc sau, t2
              input(type="text" id="t2" name="t2" disabled)


  .calculate-progress
    .container
      .calculate-progress__wrapper
        .calculate-progress__list
          .calculate-progress__line
          div(chapter="1").calculate-progress__item 1
          div(chapter="2").calculate-progress__item 2
          div(chapter="3").calculate-progress__item 3
          div(chapter="4").calculate-progress__item 4
          div(chapter="5").calculate-progress__item 5
          div(chapter="6").calculate-progress__item 6
          div(chapter="7").calculate-progress__item 7

